{
   "$id": "Session.json",
   "$schema": "https://json-schema.org/draft/2020-12/schema",

   "type": "object",
   "title": "Session-schema",

   "properties":
   {
      "Session":
      {
         "type": "object",
         "description": "Object that handles connect, disconnect, commit, rollback, and keepalive",

         "required": ["invoke"],
         "additionalProperties": false,


         "properties":
         {
            "session":
            {
               "type": "string",
               "description": "Unique identifier. Handed out after successful connect"
            }
            ,
            "invoke":
            {
               "description": "Method(s) to invoke",

               "anyOf":
               [
                  {"$ref": "#/types/Method"},
                  {"type": "array", "items": {"$ref": "#/types/Method"}}
               ]
            }
            ,
            "connect()":
            {
               "type": "object",
               "description": "Information required for connecting",

               "required": ["username"],
               "additionalProperties": false,

               "properties":
               {
                  "username": {"type": "string"},
                  "password": {"type": "string"},
                  "stateful": {"type": "boolean"},
                  "signature": {"type": "string"}
                  ,
                  "vpd":
                  {
                     "type": "array",
                     "items": {"$ref": "#/types/NameValuePair"},
                     "description": "All bindvalues to use with Virtual Private Database"
                  }
                  ,
                  "client-info":
                  {
                     "type": "array",
                     "description": "Name value pairs to apply when connecting",
                     "data":
                     {
                        "required": ["name","value"],
                        "additionalProperties": false,

                        "properties":
                        {
                           "name": {"type": "string"},
                           "value": {"type": "string"}
                        }
                     }
                  }
               }
            }
         }
      }
   }
   ,
   "types":
   {
      "NameValuePair":
      {
         "type": "object",
         "required": ["name","value"],
         "additionalProperties": false,

         "properties":
         {
            "name": {"type": "string"},
            "value": {"type": ["string","number","integer","boolean"]}
         }
      }
      ,
      "Method":
      {
         "type": "string",
         "enum": ["connect()", "properties()", "disconnect()", "commit()", "rollback()", "keepalive()"]
      }
   }
}