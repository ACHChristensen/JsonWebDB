   {
      "type": "object",
      "$id": "Table.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",

      "description": "Table object that handles select, insert, update and delete",
      "additionalProperties": false,

      "properties":
      {
         "Table":
         {
            "type": "object",
            "additionalProperties": false,
            "required": ["source","invoke"],

            "description": "The source object (table,view or query)",

            "properties":
            {
               "source":
               {
                  "type": "string",
                  "description": "The source object (table,view or query)"
               }
               ,
               "session":
               {
                  "type": "string",
                  "description": "Valid session id"
               }
               ,
               "invoke":
               {
                  "type": "string",
                  "description": "Method to invoke",
                  "enum": ["select()", "insert()", "update()", "delete()"]
               }
               ,
               "bindvalues":
               {
                  "type": "array",
                  "items": {"$ref": "#/types/BindValue"}
               }
               ,
               "update()":
               {
                  "additionalProperties": false,
                  "required": ["columns"],

                  "properties":
                  {
                     "columns":
                     {
                        "type": "array",
                        "items": {"$ref": "#/types/NameValuePair"}
                     }
                     ,
                     "assertions":
                     {
                        "type": "array",
                        "items": {"$ref": "#/types/NameValuePair"}
                     }
                     ,
                     "filters":
                     {
                        "$ref": "#/types/Filters1"
                     }
                  }
               }
            }
         }
      }
      ,
      "types":
      {
         "BindValue":
         {
            "type": "object",
            "required": ["name","type"],
            "additionalProperties": false,

            "properties":
            {
               "name": {"type": "string"},
               "type": {"type": "string"},
               "value": {"type": ["string","number","integer","boolean"]}
            }
         }
         ,
         "NameValuePair":
         {
            "type": "object",
            "required": ["name","value"],
            "additionalProperties": false,

            "properties":
            {
               "name": {"type": "string"},
               "value": {"type": ["string","number","integer","boolean"]}
            }
         }
         ,
         "Clause":
         {
            "type": "string",
            "enum": ["and","or"],
            "description": "Restriction, default: and"
         }
         ,
         "Filters":
         {
            "description": "List of filters, with or without clause",

            "anyOf":
            [
               {"$ref": "#/types/Filters1"},
               {"$ref": "#/types/Filters2"}
            ]
         }
         ,
         "Filters1":
         {
            "type": "array",
            "additionalProperties": false,
            "description": "List of filters, without clause",

            "items":
            {
               "anyOf":
               [
                  {"$ref": "#/types/Filters1"},
                  {"$ref": "#/types/Filters2"},
                  {"$ref": "#/types/Constraint"}
               ]
            }
         }
         ,
         "Filters2":
         {
            "type": "object",
            "additionalProperties": false,
            "description": "List of filters, with clause",

            "properties":
            {
               "clause": {"$ref": "#/types/Clause"}
               ,
               "filters":
               {
                  "anyOf":
                  [
                     {"$ref": "#/types/Filters1"},
                     {"$ref": "#/types/Filters2"},
                     {"$ref": "#/types/Constraint"}
                  ]
               }
            }
         }
         ,
         "Constraint":
         {
            "type": "object",
            "required": ["column","filter","value"],
            "additionalProperties": false,

            "properties":
            {
               "clause": {"$ref": "#/types/Clause"},
               "column": {"type": "string"},
               "filter": {"type": "string"},
               "value": {"type": ["string","number","integer","boolean"]}
            }
         }
      }
   }