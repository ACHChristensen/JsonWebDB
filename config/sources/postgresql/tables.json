{
   "datasources":
   [
      {
         "id": "Countries",
         "object": "countries",

         "sorting": "country_id",
         "primary-key": ["country_id"],

         "custom-filters":
         [
            {
               "name": "contains",
               "where-clause": "upper(country_id||' '||country_name) like upper('%'||:country||'%')"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
      ,
      {
         "id": "Locations",
         "object": "locations",

         "sorting": "loc_id",
         "primary-key": "loc_id",

         "custom-filters":
			[
            {
               "name": "contains",
               "where-clause": "upper(city||' '||street_address) like upper('%'||:location||'%'"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
   ]
}