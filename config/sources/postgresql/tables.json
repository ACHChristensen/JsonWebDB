         "delete": "by-primary-key",
         "select": "allowed"
      }
		,
		{
         "id": "employees",
         "object": "employees",

         "sorting": "employee_id",
         "primary-key": "employee_id",

         "custom-filters": [
            {
               "name": "contains",
