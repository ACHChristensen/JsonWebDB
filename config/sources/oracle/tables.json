{
   "datasources":
   [
      {
         "id": "Countries",
         "object": "countries",

         "order": "country_id",
         "primary-key": ["country_id"],

         "custom-filters":
         [
            {
               "name": "contains",
               "where-clause": "upper(country_id||' '||country_name) like upper('%'||:country||'%')"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
      ,
      {
         "id": "Locations",
         "object": "locations",

         "order": "loc_id",
         "primary-key": "loc_id",

         "custom-filters":
			[
            {
               "name": "contains",
               "where-clause": "upper(city||' '||street_address) like upper('%'||:location||'%'"
            }
            ,
            {
               "name": "country_name",
               "where-clause": "country_id in (select country_id from countries where country_name like :country)",
               "datatypes": [ {"name": "country", "type": "12"} ] }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
      ,
      {
         "id": "departments",
         "object": "departments",

         "order": "department_id",
         "primary-key": "department_id",

         "custom-filters":
			[
            {
               "name": "contains",
               "where-clause": "upper({column}) like upper('%'||:{value}||'%')"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
      ,
      {
         "id": "jobs",
         "object": "jobs",

         "order": "job_id",
         "primary-key": "job_id",

         "custom-filters":
			[
            {
               "name": "contains",
               "where-clause": "upper(job_id||' '||job_title) like upper('%'||:job||'%')"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
		,
		{
         "id": "employees",
         "object": "employees",

         "order": "employee_id",
         "primary-key": "employee_id",

         "vpd":
         {
            "where-clause": "employee_id > :id",
            "datatypes":
            [
              {"name": "id", "type": "numeric"}
            ],
            "apply": ["update","delete"]
         },

         "custom-filters":
         [
            {
               "name": "contains",
               "where-clause": "upper(first_name||' '||last_name) like upper('%'||:name||'%')"
            }
         ]
         ,
         "insert": "allowed",
         "update": "by-primary-key",
         "delete": "by-primary-key",
         "select": "allowed"
      }
   ]
}