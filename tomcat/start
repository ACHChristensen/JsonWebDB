#!/bin/bash

ARGS=$#
PORT=8001
SSLPORT=8002
INST="docker01"

CWD=$(pwd)
LOCATION=$(dirname "$0")

if [[ ARGS -gt 0 ]]
then
  INST=$1
fi

if [[ ARGS -gt 1 ]]
then
  PORT=$2
fi

if [[ ARGS -gt 2 ]]
then
  SSLPORT=$3
fi

cd $LOCATION
rm -rf $LOCATION/../logs/*

NAME=jsonwebdb.$INST

docker run -dit --name $NAME \
 -p $PORT:8080 \
 -p $SSLPORT:8443 \
 -e TZ=Europe/Copenhagen \
 -e JsonWebDB_Inst=$INST \
 -e JsonWebDB_Home=/jsonwebdb \
 -e JsonWebDB_Config=docker.json \
 -v /Users/alhof/Repository/JsonWebDB:/jsonwebdb \
 -v /Users/alhof/Repository/forms42/demo/dist:/dist \
jsonwebdb

./deploy $INST

cd $CWD
