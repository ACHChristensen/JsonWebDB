#!/bin/bash

CWD=$(pwd)
LOCATION=$(dirname "$0")

cd $LOCATION

../jsondb/build
../servlet/build

rm -rf $LOCATION/../logs/*

NAME=jsonwebdb

docker run -dit --name $NAME \
 -p 8080:8080 \
 -e JsonWebDB_Inst=inst01 \
 -e JsonWebDB_Home=/jsonwebdb \
 -v /Users/alhof/Repository/JsonWebDB:/jsonwebdb \
 -v /Users/alhof/Repository/forms42/demo/dist:/dist \
$NAME


./deploy

cd $CWD
